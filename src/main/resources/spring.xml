<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/context
 		http://www.springframework.org/schema/context/spring-context-3.2.xsd
 		http://www.springframework.org/schema/aop
 		http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<aop:aspectj-autoproxy />
	<context:component-scan base-package="com.epam.learning.springcore.cinema.dao">
		<context:exclude-filter type="aspectj" expression="com.epam.learning.springcore.cinema.dao.impl.mapbased.*" />
	</context:component-scan>
	<context:component-scan base-package="com.epam.learning.springcore.cinema.service.*" />
	<context:component-scan base-package="com.epam.learning.springcore.cinema.model" />
	<context:component-scan base-package="com.epam.learning.springcore.cinema.aspects.counters.jdbc" />

	<!--<import resource="classpath:auditories.xml" /> -->
	<import resource="classpath:discount.xml" />
	<import resource="classpath:db/db.xml" />
</beans>